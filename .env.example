# Server
PORT=8080

# Database (Turso with vector support)
TURSO_DATABASE_URL=libsql://your-db.turso.io
TURSO_AUTH_TOKEN=your-token

# Local SQLite (fallback when Turso not configured)
SQLITE_DB_PATH=files.db

# S3-compatible storage (AWS S3, Cloudflare R2, MinIO)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=files-management
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1
S3_USE_PATH_STYLE=false

# Authentication (optional)
MCPROUTER_SERVER_URL=https://your-mcprouter.com
MCPROUTER_SERVER_API_KEY=your-api-key
OAUTH_SERVER_URL=https://your-oauth-provider.com

# AI Services (REQUIRED)
# These environment variables are required for file processing and semantic search.
# The server will fail to start if these are not configured.
AI_GATEWAY_URL=https://ai-gateway.vercel.sh/v1
AI_GATEWAY_API_KEY=your-api-key
CONTENT_PARSER_ENDPOINT=https://your-content-parser/convert
ADMIN_API_KEY=your-admin-key

# Optional AI settings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
SUMMARY_MODEL=gpt-4o-mini

# AI Agent (auto-tagging and folder organization)
AGENT_ENABLED=true
AGENT_MODEL=gpt-4o-mini
AGENT_MAX_TURNS=10
